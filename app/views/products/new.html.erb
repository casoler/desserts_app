<div class='link-to-home-page'>
  <a href="/products">< Back to All Desserts</a>
</div>

<h1> New Dessert: </h1>

<% if @product.errors.any? %>
  <div id='error_explanation'>
    <h2><%= pluralize(@product.errors.count, 'error') %> prohibited this product from being saved:</h2>

    <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_tag '/products', method: 'post' do %>
  <div  class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :country_of_origin %>
    <%= text_field_tag :country_of_origin, @product.country_of_origin, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :flag_image %>
    <%= text_field_tag :flag_image, @product.flag_image, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :supplier_id %>
    <%= text_field_tag :supplier_id, @product.supplier_id, class: 'form-control' %>
  </div>
  <div>
    <%= submit_tag 'Add Dessert', class: "btn btn-default" %>
  </div>
<% end %>

