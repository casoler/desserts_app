<h1> Edit Dessert: </h1>
<%= form_tag "/products/#{@product.id}", method: 'patch' do %>
  <div  class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :image %>
    <%= text_field_tag :image, @product.image, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :country_of_origin %>
    <%= text_field_tag :country_of_origin, @product.country_of_origin, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :flag_image %>
    <%= text_field_tag :flag_image, @product.flag_image, class: 'form-control' %>
  </div>
  <div>
    <%= submit_tag 'Change Dessert', class: "btn btn-default" %>
  </div>
<% end %>

<div class='link-to-home-page'>
  <a href="/products">Back to All Desserts</a>
</div>

