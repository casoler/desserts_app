<div class='link-to-home-page'>
  <a href="/suppliers">< Back to All Suppliers</a>
</div>

<h1> New Supplier: </h1>
<%= form_tag '/suppliers', method: 'post' do %>
  <div  class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, '', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, '', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :phone %>
    <%= text_field_tag :phone, '', class: 'form-control' %>
  </div>
  <div>
    <%= submit_tag 'Add Supplier', class: "btn btn-default" %>
  </div>
<% end %>

