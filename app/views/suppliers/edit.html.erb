<div class='link-to-home-page'>
  <a href="/suppliers">< Back to All Desserts</a>
</div>

<h1> Edit Supplier: </h1>
<%= form_tag "/suppliers/#{@supplier.id}", method: 'patch' do %>
  <div  class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @supplier.name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, @supplier.email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :phone %>
    <%= text_field_tag :phone, @supplier.phone, class: 'form-control' %>
  </div>
  <div>
    <%= submit_tag 'Change Supplier', class: "btn btn-default" %>
  </div>
<% end %>
